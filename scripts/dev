#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
# shellcheck source=./_utils.sh
source "${SCRIPT_DIR}/_utils.sh"

run_with_venv

PORT="${PORT:-8000}"
DOCS_ROOT="${DOCS_ROOT:-${ROOT_DIR}/site/en}"

exec python -m http.server "${PORT}" --directory "${DOCS_ROOT}"
